    datasource db {
      provider = "postgresql"
      url      = env("DATABASE_URL")
    }

    generator client {
      provider = "prisma-client-js"
    }

    model Candidate {
      id         Int      @id @default(autoincrement())
      firstName  String
      lastName   String
      email      String   @unique
      phone      String
      address    String
      education  String
      experience String
      resume     String
      createdAt  DateTime @default(now())
      updatedAt  DateTime @updatedAt
    }